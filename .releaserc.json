{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/exec",
      {
        "prepareCmd": "sed -i 's/SenseiDB v[0-9.]+/SenseiDB v${nextRelease.version}/g' README.md && sed -i 's/v3.0 - Mentor IA Adaptativo/v${nextRelease.version} - Mentor IA Adaptativo/g' frontend/index.html"
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json", "README.md", "frontend/index.html"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ]
}