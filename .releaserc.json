{
  "branches": ["main"],
  "plugins": [
    "@semantic-release/commit-analyzer",
    "@semantic-release/release-notes-generator",
    "@semantic-release/changelog",
    [
      "@semantic-release/exec",
      {
        "prepare": [
          {
            "path": "/bin/sh",
            "cmd": "sed -i 's/SenseiDB v[0-9.]+/SenseiDB v${nextRelease.version}/g' README.md"
          },
          {
            "path": "/bin/sh",
            "cmd": "sed -i 's/v[0-9.]\+ - Mentor IA Adaptativo/v${nextRelease.version} - Mentor IA Adaptativo/g' frontend/index.html"
          },
          {
            "path": "/bin/sh",
            "cmd": "echo __version__ = \"${nextRelease.version}\" > backend/senseidb_backend/_version.py"
          }
        ]
      }
    ],
    [
      "@semantic-release/git",
      {
        "assets": ["CHANGELOG.md", "package.json", "README.md", "frontend/index.html", "backend/senseidb_backend/_version.py"],
        "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
      }
    ],
    "@semantic-release/github"
  ]
}